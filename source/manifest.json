{
  "name": "__MSG_app_name_title__",
  "short_name": "__MSG_app_short_name_title__",
  "version": "4.0.0",
  "manifest_version": 2,
  "description": "__MSG_app_description_text__",
  "author": "ExpressVPN",
  "__chrome__key": "",
  "__chrome__minimum_chrome_version": "53",
  "icons": {
    "16": "images/toolbar-icon-16.png",
    "32": "images/toolbar-icon-32.png",
    "48": "images/toolbar-icon-48.png",
    "128": "images/toolbar-icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "__firefox__applications": {
    "gecko": {
      "id": "firefox-addon@expressvpn.com",
      "strict_min_version": "55.0"
    }
  },
  "permissions": [
    "alarms",
    "nativeMessaging",
    "privacy",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "cookies",
    "tabs",
    "proxy",
    "unlimitedStorage",
    "notifications",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "ExpressVPN",
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    "images/*",
    "html/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
        "all_frames": true,
        "match_about_blank": true,
        "run_at": "document_start",
        "js": ["scripts/content/gps.js"]
    }
  ]
}
